@model CreateSocialMediaDto

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Sosyal Medya Sayfası Girişi Alanı </h4>
                        <p class="card-subtitle mb-4">
                           Sosyal Medya hesaplarınıza ait veri girişlerini buradan yapabilirsiniz.Yeni bir sosyal medya ekleyebilir,mevcut sosyal medya hesabınızı düzenleyebilir veya silebilirsiniz.İkonlarla ilgili listeye ikon listesi üzerinden ulaşabilirsiniz.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Sosyal Medya Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Sosyal Medya Başlığını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">URl</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="Sosyal Medya Sayfanızın URL linkini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Hizmet Ikon</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="Sosyal Medya Ikon Bilgisini Giriniz">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Bilgisini Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







